# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/email_module?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Microsoft Azure AD / Entra ID
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here
AZURE_REDIRECT_URI=http://localhost:3001/api/auth/callback

# Microsoft Graph API
GRAPH_API_BASE_URL=https://graph.microsoft.com/v1.0
GRAPH_API_SCOPES=User.Read,Mail.ReadWrite,Mail.Send

# Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key!

# Webhook
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_NOTIFICATION_URL=https://your-domain.com/api/webhooks/notifications

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_ELASTICSEARCH=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_WEBHOOKS=true
